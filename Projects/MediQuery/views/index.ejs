<%- include("partials/header.ejs") %>

<div class="container d-flex flex-column justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%;">
        <div class="text-center mb-4">
        <img src="https://img.icons8.com/ios-filled/100/4a90e2/pill.png" alt="pill-icon" width="60" />
        <h1 class="mt-3 app-title">Drug Info Finder</h1>
        <p class="text-muted">Search for reliable drug information</p>
        </div>

        <form action="/search" method="POST">
            <div class="mb-3">
                <label for="drugName" class="form-label">Drug Name</label>
                <input
                type="text"
                id="drugName"
                name="drugName"
                class="form-control"
                placeholder="e.g., ibuprofen"
                required
                />
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Search</button>
            </div>
        </form>
    </div>
</div>

<%- include("partials/footer.ejs") %>